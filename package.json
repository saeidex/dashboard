{
  "name": "crm",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.16.1",
  "license": "MIT",
  "scripts": {
    "build": "pnpm run -r build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "pnpm run -r clean",
    "db:push": "pnpm -F @crm/api db:push",
    "db:generate": "pnpm -F @crm/api db:generate",
    "db:studio": "pnpm -F @crm/api db:studio",
    "dev": "pnpm run -r --parallel --aggregate-output dev",
    "dev:web": "pnpm -F @crm/web dev",
    "dev:api": "pnpm -F @crm/api dev",
    "dev:api-client": "pnpm -F @crm/api-client dev",
    "docker:build": "docker compose build",
    "docker:build:api": "docker compose build api",
    "docker:build:web": "docker compose build web",
    "docker:db:studio": "docker compose exec api db:studio",
    "docker:down": "docker compose down",
    "docker:logs:api": "docker compose logs -f api",
    "docker:logs:web": "docker compose logs -f web",
    "docker:ps": "docker compose ps",
    "docker:up": "docker compose up -d",
    "lint": "pnpm run -r --parallel lint",
    "lint:fix": "pnpm run -r --parallel lint:fix",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm run lint:ws",
    "start:api": "pnpm -F @crm/api start",
    "start:web": "pnpm -F @crm/web preview --host",
    "typecheck": "pnpm run -r --parallel typecheck",
    "ui-add": "pnpm -F @crm/web ui-add"
  },
  "devDependencies": {
    "@crm/eslint-config": "workspace:^",
    "eslint": "^9.36.0",
    "typescript": "^5.9.2"
  }
}
